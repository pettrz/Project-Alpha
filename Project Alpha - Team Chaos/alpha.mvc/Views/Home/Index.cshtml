@model alpha.mvc.Models.Repository


@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>


    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/wwwroot/images/wine_4.jpg" alt="Package Management" class="img-responsive" />

            <div class="carousel-caption" role="option">
                <h2>
                    Välkommen till Vinbolaget
                </h2>
            </div>
        </div>
        <div class="item">
            <img src="~/wwwroot/images/wine_2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h2>
                    Våra butiker
                </h2>
            </div>
        </div>
        <div class="item">
            <img src="~/wwwroot/images/wine_1.jpg" alt="ASP.NET" class="img-responsive" />

            <div class="carousel-caption" role="option">
                <h2>
                    Vårt sortiment
                </h2>
            </div>
        </div>
        <div class="item">
            <img src="~/wwwroot/images/wine_3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h2>
                    För livsnjutare
                </h2>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="row">
    <div class="col-md-offset-2 col-md-8 col-md-offset-2 text-center intro">
        <div>
            <h2>Vinbolaget</h2>
            <p>
                Välkommen till Vinbolaget! Vinbolaget erbjuder en mängd tjänster som lokalisering av produkter och lokala butiker.
                Genom vår effektiva sökmotor kan du snabbt hitta de önskade produkter och butiker du letar efter. Spara tid och pengar!
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="padd">
        <div class=" col-md-12 assortment">
            <div class="col-md-offset-1 col-md-3 dropdown">
                <button onclick="myFunction()" class="dropbtn">Välj butik</button>
                <div id="myDropdown" class="dropdown-content" onclick="myFunctions()">
                    <input type="text" placeholder="Sök adress.." id="myInput" onkeyup="filterFunction()">

                    @foreach (var s in Model.Stores)
                    {
                        <a class="list-inline-item">@s.Street</a>
                        System.Diagnostics.Debug.WriteLine(s.Street);
                    }


                </div>
            </div>

            <div class="col-md-7" id="productList">


                <table class="table table-striped table-fixed table-hover">
                    <thead class="fixed">
                        <tr class="header">
                            <th width="100%">Vin</th>
                            <th>Sort</th>
                            <th>Pris</th>
                            
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var p in Model.Products)
                        {
                            <tr>
                                <td>@p.Title</td>
                                <td>@p.Type</td>
                                <td>@p.Price kr</td>

                            </tr>
                        }


                    </tbody>

                </table>
                <script>
                    function myFunctions() {
                        var x = document.getElementById("productList");
                        if (x.style.display === "block") {
                            x.style.display = "none";
                        } else {
                            x.style.display = "block";
                        }
                    }
                </script>
            </div>


        </div>

    </div>

</div>



<br />
<br />
<br />

<footer class="text-center">
    <p>&copy; 2017 Vinbolaget</p>
</footer>
