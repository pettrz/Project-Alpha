    <div class="row">
        <div class=" col-md-12 assortment">
            <div class="col-md-3 dropdown">
                <button onclick="myFunction()" class="dropbtn">Hitta butik</button>
                <div id="myDropdown" class="dropdown-content">
                    <input type="text" placeholder="Sök.." id="myInput" onkeyup="filterFunction()">

                    @foreach (var s in Model.Stores)
                    {
                        <a href="" class="list-inline-item">@s.Street</a>
                        System.Diagnostics.Debug.WriteLine(s.Street);
                    }


                </div>
            </div>
            <div class="col-md-9 productList">


                <table class="table table-striped" style="table-layout: fixed">
                    <thead id="header-fixed">
                        <tr>
                            <th>Butik   </th>
                            <th>Vara</th>
                            <th>Pris</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var p in Model.Products)
                        {
                            <tr>
                                <td>@p.Title</td>
                                <td>@p.Price</td>
                            </tr>
                        }


                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<footer class="text-center">
    <p>&copy; 2017 Vinbolaget</p>
</footer>
